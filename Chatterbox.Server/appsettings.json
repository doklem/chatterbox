{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "NLog": {
      "AutoReload": true,
      "CaptureMessageProperties": true,
      "IncludeScopes": true,
      "ParseMessageTemplates": true,
      "Rules": [
        {
          "Logger": "*",
          "WriteTo": "File"
        }
      ],
      "Targets": {
        "File": {
          "Type": "AsyncWrapper",
          "Target": {
            "WrappedFile": {
              "ArchiveAboveSize": "10485760",
              "ArchiveEvery": "Day",
              "FileName": "log\\${shortdate}.log",
              "Layout": {
                "Type": "JsonLayout",
                "Attributes": [
                  {
                    "Name": "timestamp",
                    "Layout": "${date:format=o}"
                  },
                  {
                    "Name": "level",
                    "Layout": "${level}"
                  },
                  {
                    "Name": "logger",
                    "Layout": "${logger}"
                  },
                  {
                    "Name": "message",
                    "Layout": "${message:raw=true}"
                  },
                  {
                    "Name": "properties",
                    "Encode": false,
                    "Layout": {
                      "Type": "JsonLayout",
                      "IncludeAllProperties": "true"
                    }
                  }
                ]
              },
              "MaxArchiveFiles": "10",
              "Type": "File"
            }
          }
        }
      },
      "ThrowConfigExceptions": true
    }
  },
  "AllowedHosts": "*"
}
